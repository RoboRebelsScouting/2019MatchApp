<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginBottom="30dp"
        android:text="Save"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="30dp"
        android:text="Submit"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/endText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="End of Game"
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brokenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Did Robot Break?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="145dp" />

    <RadioGroup
        android:id="@+id/brokenGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintTop_toBottomOf="@+id/brokenText">

        <RadioButton
            android:id="@+id/brokeYes"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/brokeNo"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:text="No"
            android:textAlignment="viewStart"
            android:textSize="40sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/climbText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Did Robot Climb?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brokenGroup" />

    <RadioGroup
        android:id="@+id/climbGroup"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/climbText">

        <RadioButton
            android:id="@+id/climbNo"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="No"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/climb1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="Position 1"
            android:textAlignment="viewStart"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/climb2"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Position 2"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/climb3"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:text="Position 3"
            android:textAlignment="viewStart"
            android:textSize="30sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/defenseText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Did Robot Play Defense?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/climbGroup" />

    <RadioGroup
        android:id="@+id/defenseGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/defenseText">

        <RadioButton
            android:id="@+id/defenseYes"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/defenseNo"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:text="No"
            android:textAlignment="viewStart"
            android:textSize="40sp" />
    </RadioGroup>

    <TextView
        android:id="@+id/tipText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Did Robot Tip?"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/defenseGroup" />

    <RadioGroup
        android:id="@+id/tipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/tipText">

        <RadioButton
            android:id="@+id/tipYes"
            android:layout_width="299dp"
            android:layout_height="wrap_content"
            android:text="Yes"
            android:textSize="40sp" />

        <RadioButton
            android:id="@+id/tipNo"
            android:layout_width="289dp"
            android:layout_height="wrap_content"
            android:text="No"
            android:textAlignment="viewStart"
            android:textSize="40sp" />
    </RadioGroup>
</android.support.constraint.ConstraintLayout>